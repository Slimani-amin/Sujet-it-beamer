\frametitle{Exemple de requêtes MongoDB}
\begin{exampleblock}{Requêtes MongoDB}
		\begin{minted}[fontsize=\scriptsize]{javascript}
			// Insérer un document
			db.collection('users').insertOne({ name: 'Amine', age: 23 });
			
			// Rechercher des documents
			db.collection('users').find({ age: { $gt: 25 } });
			
			// Mettre à jour un document
			db.collection('users').updateOne({ name: 'Amine' }, { $set: { age: 31 } });
		\end{minted}
	\end{exampleblock}
\end{frame}	
	
	
	
	
	
